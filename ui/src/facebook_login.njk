<!-- Facebook Login Hero Section -->
<section class="hero-gradient text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Connect Your Facebook Account</h1>
        <p class="text-xl opacity-90 max-w-2xl mx-auto">Log in securely with Facebook to allow SmartApplicant to access your selected pages for automation.</p>
    </div>
</section>

<!-- Login Button Section -->
<section class="py-16 px-4 bg-white">
    <div class="max-w-xl mx-auto text-center">
        <h2 class="text-2xl font-semibold mb-4">Proceed with Facebook Authentication</h2>
        <p class="text-gray-600 mb-8">This step is required to enable automated posting, comment replies, and engagement management.</p>

        <button id="fbLoginBtn" class="relative inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-10 rounded-full shadow-lg transition-all duration-300 overflow-hidden">
            <span class="spinner hidden absolute left-4 w-5 h-5 border-4 border-white border-t-transparent rounded-full animate-spin"></span>
            <span class="button-text">Login with Facebook</span>
        </button>
    </div>
</section>

<script>
    let facebookLoginUrl = null;
document.addEventListener('DOMContentLoaded', async () => {
    const res = await API.request('/facebook/login/');
    const data = await res.json();
    facebookLoginUrl = data.auth_url;
});
document.getElementById('fbLoginBtn').onclick = function () {
    if (!facebookLoginUrl) {
        showToast("Facebook login not ready yet.", "error");
        return;
    }

    window.location.href = facebookLoginUrl;
};
