function statusChangeCallback(response) {
    const fbLoginBtn = document.getElementById('fbLoginBtn');
    const spinner = fbLoginBtn.querySelector('.spinner');
    const btnText = fbLoginBtn.querySelector('.button-text');

    if (response.status === 'connected') {
        // User is logged in and authenticated
        window.location.href = '/facebook_pages_selection';
    } else {
        // User is not logged in or not authenticated
        FB.login(function(response) {
            if (response.authResponse) {
                // localStorage.setItem("fbAuthResponse", JSON.stringify(response.authResponse));
                // window.location.href = '/fb_page_selector';
            } else {
                spinner.classList.add('hidden');
                btnText.textContent = 'Login with Facebook';
                console.error('Facebook login was cancelled or not fully authorized. Please try again.');
            }
        }, {
            scope: 'pages_show_list,pages_manage_posts,pages_read_engagement,pages_manage_engagement,pages_manage_metadata,pages_read_user_content',
            return_scopes: true,
            response_type: 'code'

        });
    }
}
